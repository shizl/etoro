                    else{
                    $courseid = $node->field_course_id['und']['0']['value'];
                     $text = variable_get('ebook');
                     $replace_course = str_replace('courseid',$courseid,$text);
                     
                     $replace_language = str_replace('language','cn',$replace_course);
                    $output ="$replace_language";
